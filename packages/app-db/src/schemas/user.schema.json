{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "https://paritytech.github.io/canvas-ui/user.schema.json",
    "title": "User",
    "description": "A Canvas UI user identity",
    "type": "object",
    "properties": {
        "_id": {
            "description": "Field to contain ulid-based instance id",
            "type": "string"
        },
        "codeBundles": {
            "description": "Addresses of saved smart contracts",
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "contracts": {
            "description": "Addresses of saved smart contracts",
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "publicKey": {
            "description": "The user's public key",
            "type": "string"
        },
        "email": {
            "description": "The user's email address",
            "type": "string",
            "format": "email"
        },
        "name": {
            "description": "The user's display name",
            "type": "string"
        }
    },
    "required": [ "publicKey" ]
}